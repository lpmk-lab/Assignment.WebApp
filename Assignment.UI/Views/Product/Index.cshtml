@model IEnumerable<ProductModel>

<h2>Product List</h2>
<a class="btn btn-primary mb-3" asp-action="Add" >Add Product</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>SN</th>
            <th>Name</th>
            <th>Description</th>
            <th>Created Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.CreatedDate</td>
          
          
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary btn-sm" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm" title="Delete">
                        <i class="bi bi-x-lg"></i>
                    </a>
                </td>

              

              
            </tr>
        }
    </tbody>
</table>

